import io from 'socket.io'

class {
  onCreate(input) {
    this.state = { messages: input.messages };
  }
  onMount() {
    this.socket = io("http://localhost:3077");

    this.socket.on("messages", message => {
      this.setState({
        messages: this.state.messages.concat(message)
      });
    });
  }
}

